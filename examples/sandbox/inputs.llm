<sandbox styles="sandbox.style">
	<table>
		<cell>
			<text_box_input controllers="text_box"/>
		</cell>
		<cell border_width="1">
			<input_log id="text_box_log"/>
		</cell>
		<cell border_width="1">
			<input_results id="text_box_results"/>
		</cell>
		<!-- end row ------------------------------------------------->
		<cell>
			<text_area_input controllers="text_area"/>
		</cell>
		<cell>
			<input_log id="text_area_log"/>
		</cell>
		<cell border_width="1">
			<input_results id="text_area_results"/>
		</cell>
		<!-- end row ------------------------------------------------->
		<cell>
			<check_box_input controllers="check_box"/>
		</cell>
		<cell>
			<input_log id="check_box_log"/>
		</cell>
		<cell border_width="1">
			<input_results id="check_box_results"/>
		</cell>
		<!-- end row ------------------------------------------------->
		<cell>
			<radio_button_input controllers="radio_button" id="radio_1" group="radios"/><radio_label>One</radio_label>
			<radio_button_input controllers="radio_button" id="radio_2" group="radios"/><radio_label>Two</radio_label>
			<radio_button_input controllers="radio_button" id="radio_3" group="radios"/><radio_label>Three</radio_label>
		</cell>
		<cell>
			<input_log id="radio_button_log"/>
		</cell>
		<cell border_width="1">
			<input_results id="radio_button_results"/>
		</cell>
		<!-- end row ------------------------------------------------->
		<cell>
			<combo_box_input controllers="combo_box" choices="%w{Red Orange Yellow Green Blue Indigo Violet}"/>
		</cell>
		<cell>
			<input_log id="combo_box_log"/>
		</cell>
		<cell border_width="1">
			<input_results id="combo_box_results"/>
		</cell>
		<!-- end row ------------------------------------------------->
		<cell>
			<button_input controllers="button" text="A Button"/>
		</cell>
		<cell>
			<input_log id="button_log"/>
		</cell>
		<cell border_width="1">
			<input_results id="button_results"/>
		</cell>
	</table>
</sandbox>